
@{ ViewBag.Title = "Đổi mật khẩu";
                Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/wwwroot/js/custom/user.css" />
    }


<section class="user-form-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="user-form-card">
                    <div class="user-form-title">
                        <h2>Đổi mật khẩu</h2>
                        <p>Nhập đúng thông tin để đổi mật khẩu</p>
                    </div>
                    <form class="user-form" method="post" >

                        <div class="form-group">
                            <input type="password" name="old_password" class="form-control" placeholder="Mật khẩu cũ" />

                        </div>
                        <div class="form-group">
                            <input type="password" name="old_password" class="form-control" placeholder="Mật khẩu mới" />
                        </div>
                        <div class="form-group">
                            <input type="password" name="old_password" class="form-control" placeholder="Nhập lại mật khẩu" />
                        </div>

                        <div class="form-button">
                            <button><a href="@Url.Action("Account","User")"> Đổi mật khẩu</a></button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}