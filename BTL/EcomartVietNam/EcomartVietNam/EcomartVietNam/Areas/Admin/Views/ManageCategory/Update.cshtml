@model EcomartVietNam.Models.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Chỉnh sửa chuyên mục</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                    <form method="post" action="@Url.Action("Update","ManageCategory")">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Mã danh mục</label>
                            @Html.EditorFor(model => model.category_id, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly"  } })
                            <label>Tên danh mục</label>
                            @Html.EditorFor(model => model.category_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-primary" type="submit">
                                Cập nhật
                            </button>
                            <a href="@Url.Action("Index","ManageCategory")" class="btn btn-link">Huỷ</a>
                        </div>
                    </form>
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
