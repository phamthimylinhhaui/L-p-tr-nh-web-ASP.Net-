@model IEnumerable<EcomartVietNam.Models.Order_detail>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


@section addcss{
    <link href="~/wwwroot/js/custom/invoice.css" rel="stylesheet" />
    <link href="~/wwwroot/js/custom/mainnnn.css" rel="stylesheet" />
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/wwwroot/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Chi tiết đơn hàng</h2>
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Home")">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Chi tiết đơn hàng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="inner-section invoice-part" style="margin-top:40px">
        <div class="container">
            <div class="row">
                @*<div class="col-lg-12">
                        <div class="alert-info">
                            <p>Cảm ơn bạn! Chúng tôi đã nhận được đơn đặt hàng của bạn.</p>
                        </div>
                    </div>*@
                <div class="col-lg-6">
                    <div class="account-card">
                        <div class="account-title">
                            <h4>Chi tiết đơn hàng</h4>
                        </div>
                        <div class="account-content">
                            <ul class="invoice-details">
                                <li>
                                    <h6>Mã đơn</h6>
                                    <p>#@ViewBag.OrderId</p>
                                </li>
                                <li>
                                    <h6>Tổng số sản phẩm</h6>
                                    <p>@ViewBag.Quantity sản phẩm</p>
                                </li>
                                <li>
                                    <h6>Ngày đặt</h6>
                                    <p>@ViewBag.CreatedAt</p>
                                </li>
                                <li>
                                    <h6>Địa chỉ giao hàng</h6>
                                    <p>@ViewBag.Address</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="account-card">
                        <div class="account-title">
                            <h4>Chi tiết số tiền</h4>
                        </div>
                        <div class="account-content">
                            <ul class="invoice-details">
                                <li>
                                    <h6>Tổng tiền</h6>
                                    <p>@string.Format("{0:#,##}", ViewBag.Price) vnđ</p>
                                </li>
                                <li>
                                    <h6>Giảm giá</h6>
                                    <p>0 vnđ</p>
                                </li>
                                <li>
                                    <h6>Phương thức thanh toán</h6>
                                    <p>Khi nhận hàng</p>
                                </li>
                                <li>
                                    <h6>Thành tiền</h6>
                                    <p>@string.Format("{0:#,##}", ViewBag.Price) vnđ</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="table-scroll">
                        <table class="table-list">
                            <thead>
                                <tr>
                                    <th scope="col">Mã SP</th>
                                    <th scope="col">Ảnh</th>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-serial">
                                            <h6>
                                               SP-@item.Product.product_id
                                            </h6>
                                        </td>
                                        <td class="table-image">
                                            <img src="~/wwwroot/assets/images/product/medium-size/@item.Product.product_image" alt="product" />
                                        </td>
                                        <td class="table-name">
                                            <h6>@item.Product.product_name</h6>
                                        </td>
                                        <td class="table-price">
                                            <h6>@string.Format("{0:#,##}", item.Product.product_price) vnđ</h6>
                                        </td>
                                        <td class="table-quantity">
                                            <h6>@item.quantity</h6>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center mt-5">
                    <a class="btn btn-inline" href="@Url.Action("Index","Home") ">Trở về trang chủ</a>
                    
                </div>
            </div>
        </div>
    </section>
</main>
    <script>
        const removeLocalStorage = () => {
            localStorage.removeItem("productIds");
            localStorage.removeItem("amount");
        }

        removeLocalStorage();
    </script>
